twx_test_unit_will_begin ( NAME "twx_split_assign" ID twx_split_assign )
if ( TWX_TEST_UNIT_RUN )
  block ()
  # Failure: two many arguments
  twx_fatal_test ()
  twx_split_assign ( a b c d e f ) # `twx_split_assign ( 1 2 3 4 5 6 )` has side effects
  twx_fatal_assert_failed ()
  # Failure: bad keyword 1
  twx_fatal_test ()
  twx_split_assign ( kv IN_KEYx k IN_VALUE v )
  twx_fatal_assert_failed ()
  # Failure: bad keyword 2
  twx_fatal_test ()
  twx_split_assign ( kv IN_KEY k IN_VALUEx v )
  twx_fatal_assert_failed ()
  # Failure: bad variable names
  twx_fatal_test ()
  twx_assert_variable_name ( "<k>" )
  twx_fatal_assert_failed ()
  twx_fatal_test ()
  twx_assert_variable_name ( " " )
  twx_fatal_assert_failed ()
  twx_fatal_test ()
  twx_split_assign ( kv IN_KEY <k> IN_VALUE v )
  twx_fatal_assert_failed ()
  twx_fatal_test ()
  twx_split_assign ( kv IN_KEY k IN_VALUE <v> )
  twx_fatal_assert_failed ()
  # Failure: not the same variable names
  twx_fatal_test ()
  twx_split_assign ( kv IN_KEY w IN_VALUE w )
  twx_fatal_assert_failed ()
  # Success: Normal call
  twx_fatal_test ()
  set ( k )
  twx_assert_undefined ( k )
  set ( v )
  twx_assert_undefined ( k v )
  twx_fatal_assert_passed ()
  twx_split_assign ( key=value IN_KEY k IN_VALUE v )
  twx_fatal_assert_passed ()
  # Success: Normal call, value with "="
  twx_fatal_test ()
  set ( k )
  set ( v )
  twx_assert_undefined ( k v )
  twx_fatal_assert_passed ()
  twx_fatal_test ()
  twx_split_assign ( key=va=ue IN_KEY k IN_VALUE v )
  twx_expect ( k key )
  twx_expect ( v va=ue )
  twx_fatal_assert_passed ()
  # Failure: no key
  twx_fatal_test ()
  set ( k )
  set ( v )
  twx_split_assign ( =value IN_KEY k IN_VALUE v )
  twx_fatal_assert_failed ()
  # Success: only key
  twx_fatal_test ()
  set ( k )
  set ( v )
  twx_assert_undefined ( k v )
  twx_fatal_test ()
  twx_split_assign ( key IN_KEY k IN_VALUE v )
  twx_expect ( k key )
  twx_assert_undefined ( v )
  twx_fatal_assert_passed ()
  endblock ()
endif ()
twx_test_unit_did_end ()

